@model string

<div class="d-flex justify-content-center">
@if (Model == "Draw")
{
    <h2>DRAW!</h2>
}
else
{
    <h2>Congragulations <i>@Model</i> you are the Winner!</h2>
}
</div>
<div class="d-flex justify-content-center">
    @Html.AjaxActionLink("Continue To Play", "Continue",new { name = Model },new AjaxOptions { UpdateTargetId = "game" }, new { @class = "btn btn-primary mx-2" })
    <a asp-action="Index" class="btn btn-primary">New Game</a>
</div>
